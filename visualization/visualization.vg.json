{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 900,
  "autosize": "none",
  "signals": [
    {"name": "tx", "update": "width / 2"},
    {"name": "ty", "update": "height / 2"},
    {
      "name": "scale",
      "value": 1100,
      "on": [
        {
          "events": {"type": "wheel", "consume": true},
          "update": "clamp(scale * pow(1.0005, -event.deltaY * pow(16, event.deltaMode)), 500, 50000)"
        }
      ]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{"events": "pointerdown", "update": "[rotateX, centerY]"}]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{"events": "pointerdown", "update": "copy('projection')"}]
    },
    {
      "name": "start",
      "value": null,
      "on": [{"events": "pointerdown", "update": "invert(cloned, xy())"}]
    },
    {
      "name": "drag",
      "value": null,
      "on": [
        {
          "events": "[pointerdown, window:pointerup] > window:pointermove",
          "update": "invert(cloned, xy())"
        }
      ]
    },
    {
      "name": "delta",
      "value": null,
      "on": [
        {
          "events": {"signal": "drag"},
          "update": "[drag[0] - start[0], start[1] - drag[1]]"
        }
      ]
    },
    {
      "name": "rotateX",
      "value": -133,
      "on": [{"events": {"signal": "delta"}, "update": "angles[0] + delta[0]"}]
    },
    {
      "name": "centerY",
      "value": -28,
      "on": [
        {
          "events": {"signal": "delta"},
          "update": "clamp(angles[1] + delta[1], -60, 60)"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "mercator",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, 0, 0],
      "center": [0, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    }
  ],
  "data": [
    {"name": "sphere", "values": [{"type": "Sphere"}]},
    {
      "name": "graticule",
      "transform": [{"type": "graticule", "step": [30, 30]}]
    },
    {
      "name": "postcodes",
      "url": "https://raw.githubusercontent.com/ferocia/australia-geojsons/master/outputs/au-postcodes-Visvalingam-5.geojson",
      "format": {"type": "json", "property": "features"}
    },
    {
      "name": "csv_data",
      "url": "https://raw.githubusercontent.com/khoisday/Assignment-2/refs/heads/main/data/Postal_method_to_work.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "formula",
          "as": "VehicleNum",
          "expr": "toNumber(datum.Vehicle)"
        },
        {"type": "formula", "as": "TotalNum", "expr": "toNumber(datum.Total)"},
        {
          "type": "formula",
          "as": "Percentage",
          "expr": "datum.TotalNum > 0 ? (datum.VehicleNum / datum.TotalNum) * 100 : null"
        }
      ]
    },
    {
      "name": "postcodes_with_data",
      "source": "postcodes",
      "transform": [
        {
          "type": "lookup",
          "from": "csv_data",
          "key": "postcode",
          "fields": ["properties.POA_CODE"],
          "values": ["Percentage", "VehicleNum", "TotalNum"]
        },
        {"type": "filter", "expr": "datum.Percentage != null"}
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": [3, 56],
      "range": {"scheme": "redyellowgreen"},
      "reverse": true,
      "clamp": true
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Private Transport %",
      "format": ".0f",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "sphere"},
      "encode": {"enter": {"fill": {"value": "#C0D2D3"}}},
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "shape",
      "from": {"data": "graticule"},
      "encode": {
        "enter": {
          "strokeWidth": {"value": 0.5},
          "stroke": {"value": "#999"},
          "fill": {"value": null}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "shape",
      "from": {"data": "postcodes_with_data"},
      "encode": {
        "enter": {"strokeWidth": {"value": 0.5}, "stroke": {"value": "white"}},
        "update": {
          "fill": {"scale": "color", "field": "Percentage"},
          "tooltip": {
            "signal": "{'Postcode': datum.properties.POA_CODE, 'Private Transport %': format(datum.Percentage, '.1f'), 'Vehicle Users': format(datum.VehicleNum, ','), 'Total Commuters': format(datum.TotalNum, ',')}"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "title": {
    "text": "Private transport mode share of journeys to work in Australia, 2016",
    "fontSize": 14
  },
  "config": {}
}