{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 750,
  "height": 300,
  "title": {
    "text": "Transport Trends Over Time",
    "subtitle": "Passenger distance traveled by mode (1975-2024)",
    "fontSize": 18,
    "fontWeight": 600,
    "color": "#1e4d5c",
    "subtitleFontSize": 13,
    "subtitleColor": "#5a7d8a",
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/khoisday/Assignment-2/refs/heads/main/data/different-transport.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    {
      "fold": ["Passenger cars", "Buses", "Rail", "Air", "Other "],
      "as": ["mode", "value"]
    },
    { "filter": "datum.value != null" }
  ],
  "layer": [
    {
      "mark": { "type": "line", "point": true },
      "encoding": {
        "x": {
          "field": "Financial year",
          "type": "ordinal",
          "title": "Financial Year",
          "axis": {
            "labelAngle": 0,
            "labelExpr": "split(datum.label, '-')[0] % 5 == 0 || datum.label == '2023-24' ? datum.label : ''",
            "labelFontSize": 12,
            "titleFontSize": 13,
            "titleFontWeight": 600,
            "titleColor": "#2c5f6f"
          }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Billion Passenger km",
          "axis": {
            "labelFontSize": 11,
            "titleFontSize": 13,
            "titleFontWeight": 600,
            "titleColor": "#2c5f6f",
            "grid": true,
            "gridOpacity": 0.3
          }
        },
        "color": {
          "field": "mode",
          "type": "nominal",
          "title": "Transport Mode",
          "scale": {
            "domain": ["Passenger cars", "Buses", "Rail", "Air", "Other "],
            "range": ["#0f4c5c", "#9bc53d", "#489fb5", "#16697a", "#7a8c99"]
          },
          "legend": {
            "symbolSize": 200,
            "labelFontSize": 12,
            "titleFontSize": 13,
            "titlePadding": 20,
            "symbolStrokeWidth": 2,
            "rowPadding": 12
          }
        },
        "tooltip": [
          { "field": "Financial year", "type": "ordinal", "title": "Year" },
          {
            "field": "value",
            "type": "quantitative",
            "title": "Distance Traveled (Billion km)",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "data": {
        "values": [{ "year": "2019-20", "y": 220 }]
      },
      "layer": [
        {
          "mark": {
            "type": "rule",
            "strokeDash": [4, 4],
            "strokeWidth": 2,
            "color": "#d62828"
          },
          "encoding": {
            "x": { "field": "year", "type": "ordinal" }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "dx": -55,
            "dy": -10,
            "fontSize": 12,
            "fontWeight": 600,
            "color": "#d62828"
          },
          "encoding": {
            "x": { "field": "year", "type": "ordinal" },
            "y": { "field": "y", "type": "quantitative" },
            "text": { "value": "COVID-19 Impact" }
          }
        }
      ]
    }
  ],
  "config": {}
}
